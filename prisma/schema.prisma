// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin") // admin, editor
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Testimonial {
  id        String   @id @default(cuid())
  quote     String   
  author    String
  role      String
  city      String
  metrics   String   // JSON array stored as string
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CaseStudy {
  id          String   @id @default(cuid())
  title       String
  category    String
  image       String
  year        String
  description String   
  link        String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Philosophy {
  id        String   @id @default(cuid())
  title     String?
  content   String    // Main philosophy text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Hero {
  id          String   @id @default(cuid())
  title       String?
  subtitle    String?
  description String?  
  ctaText     String?
  ctaLink     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Stat {
  id        String   @id @default(cuid())
  label     String
  value     String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactBooking {
  id             String   @id @default(cuid())
  // Booking slot fields (for admin-created booking slots)
  day            String?
  date           String?
  slots          String?  // JSON array stored as string
  // Contact form fields (for user submissions)
  name           String?
  email          String?
  phone          String?
  message        String?  
  preferredDate  String?
  preferredTime  String?
  order          Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Visual {
